    <!-- Custom Js -->
    <script src="../../Scripts/adminjs/admin.js"></script>
    <script src="../../Scripts/adminjs/pages/tables/jquery-datatable.js"></script>

    <!-- Demo Js -->
    <script src="../../Scripts/adminjs/demo.js"></script>
</body>

